<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Define properties -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    <property name="LOG_FILE" value="${LOG_FILE:-belezza-api}"/>
    <property name="LOG_PATTERN" value="%d{ISO8601} [%X{requestId}] [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="LOG_PATTERN_COLORED" value="%d{ISO8601} %highlight(%-5level) [%X{requestId}] [%thread] %cyan(%logger{36}) - %msg%n"/>

    <!-- MDC (Mapped Diagnostic Context) for request tracing -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console Appender with colors (for development) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN_COLORED}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Console Appender without colors (for production/containers) -->
    <appender name="CONSOLE_PLAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- File Appender with Rolling Policy -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover with max size -->
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error File Appender (separate file for errors) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async Appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <appender-ref ref="FILE"/>
    </appender>

    <!-- JSON Appender for structured logging (production/ELK) -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampFormat>
                <appendLineSeparator>true</appendLineSeparator>
            </layout>
        </encoder>
    </appender>

    <!-- Development Profile -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- Application packages -->
        <logger name="com.belezza" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Spring Framework -->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>

        <!-- Hibernate SQL -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

        <!-- Flyway -->
        <logger name="org.flywaydb" level="DEBUG"/>
    </springProfile>

    <!-- Test Profile -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="CONSOLE_PLAIN"/>
        </root>

        <logger name="com.belezza" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_PLAIN"/>
        </logger>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="CONSOLE_PLAIN"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>

        <!-- Application packages -->
        <logger name="com.belezza" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_PLAIN"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </logger>

        <!-- Spring Framework - reduced logging -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.springframework.security" level="WARN"/>

        <!-- Hibernate - minimal logging -->
        <logger name="org.hibernate" level="WARN"/>

        <!-- External libraries -->
        <logger name="software.amazon" level="WARN"/>
        <logger name="io.netty" level="WARN"/>
        <logger name="reactor" level="WARN"/>
    </springProfile>

    <!-- Staging Profile (similar to prod but with more logging) -->
    <springProfile name="staging">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PLAIN"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>

        <logger name="com.belezza" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE_PLAIN"/>
            <appender-ref ref="ASYNC_FILE"/>
        </logger>

        <logger name="org.springframework.security" level="INFO"/>
    </springProfile>

</configuration>
